{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=newsnet;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Issuer": "https://newsnet",
    "Audience": "https://newsnet.clients",
    "Key": "REPLACE_WITH_A_LONG_RANDOM_SECRET",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7
  },
  "RateLimiting": {
    "AuthPerMinute": 5,
    "CommentPerMinute": 5
  }
}
